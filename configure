  write_srec.o
  write_wdc.o"

for cpu in ${CPUS}
do
  DFLAGS_ALL="${DFLAGS_ALL} -DENABLE_${cpu}"
done

DFLAGS_ALL=`echo ${DFLAGS_ALL} | sed 's/^ *//'`

for file in asm/*.cpp
do
  if [[ ! $(basename ${file})  == "template.cpp" ]]
  then
    file=${file##*/}
    ASM_OBJS_ALL="${ASM_OBJS_ALL} ${file%.cpp}.o"
  fi
done

for file in disasm/*.cpp
do
  if [[ ! $(basename ${file}) == "template.cpp" ]]
  then
    file=${file##*/}
    DISASM_OBJS_ALL="${DISASM_OBJS_ALL} ${file%.cpp}.o"
  fi
done

for file in table/*.cpp
do
  if [[ ! $(basename ${file}) == "template.cpp" ]]
  then
    file=${file##*/}
    TABLE_OBJS_ALL="${TABLE_OBJS_ALL} ${file%.cpp}.o"
  fi
done

for file in simulate/*.cpp
do
  if [[ ! $(basename ${file}) == "template.c" ]]
  then
    file=${file##*/}
    SIM_OBJS_ALL="${SIM_OBJS_ALL} ${file%.cpp}.o"
  fi
done

targetos=`uname -s`

case $targetos in
MINGW*)
#CFLAGS="${CFLAGS} -DWINDOWS -mwindows"
CONFIG_EXT=".exe"
INSTALL_PREFIX="/c/Program Files/naken_asm"
;;
esac

show_help()
{
  echo
  echo "Usage: ./configure [options]"
  echo
  echo "  --help                    list options"
  echo "  --cc                      C compiler"
  echo "  --cxx                     C++ compiler"
  echo "  --cflags=CFLAGS           extra C compiler flags"
  echo "  --cxxflags=CXXFLAGS       extra C++ compiler flags"
  echo "  --ldflags=LDFLAGS         extra linker flags"
  echo "  --prefix=PATH             base path to install to (${INSTALL_PREFIX})"
  echo "  --include-path=PATH       default: (${INSTALL_PREFIX}/share/naken_asm/includes)"
  echo "  --compiler-prefix=PREFIX  for cross-compilers"
  echo "  --enable-debug            compile in debug code"
  echo

  exit
}

test_c_compiler()
{
  cat >config.c <<EOF
  int main(int argc, char **argv) { (void)argc; (void)argv; return 0; }
EOF

  rm -f config
  ${1} ${CFLAGS} -o config config.c >>config.log 2>&1
  local e=$?
  if ! [ -e config ]
  then
    echo "C compiler ${CC} cannot create executables. Compiler command was:"
    echo "${1} ${CFLAGS} -o config config.c >>config.log 2>&1"
    echo "Check config.log for details."
  else
    rm -f config.log
  fi
  rm -f config
  return $e
}

test_cpp_compiler()
{
  cat >config.cpp <<EOF
  int main(int argc, char **argv) { (void)argc; (void)argv; return 0; }
EOF

  rm -f config
  ${1} ${CXXFLAGS} -o config config.cpp >>config.log 2>&1
  local e=$?
  if ! [ -e config ]
  then
    echo "C++ compiler ${CXX} cannot create executables. Compiler command was:"
    echo "${1} ${CXXFLAGS} -o config config.cpp >>config.log 2>&1"
    echo "Check config.log for details."
  else
    rm -f config.log
  fi
  rm -f config
  return $e
}

test_lib()
{
  cat >config.c <<EOF
main() { }
EOF

  ${COMPILER_PREFIX}${CC} -o config config.c $1 ${LDFLAGS} >>config.log 2>&1
}

test_include()
{
  cat >config.c <<EOF
#include <stdio.h>
#include <stdlib.h>
#include <${1}>
int main() { return 0; }
EOF

  ${COMPILER_PREFIX}${CC} -c config.c ${CFLAGS} >>config.log 2>&1
}

test_strip()
{
  cat >config.c <<EOF
int main() { return 0; }
EOF
  a=`${COMPILER_PREFIX}${CC} -o config config.c -s 2>&1 >>config.log | grep 'option -s is obsolete'`
  if [ "${a}" == "" ]
  then
    LDFLAGS="${LDFLAGS} -s"
  fi
}

instr()
{
  for s in $2; do
    case "${s}" in
    *${1}*) return 0
    ;;
    esac
  done

  return 1
}

cleanup()
{
  rm -f config.c config.cpp
  rm -f config.o
  rm -f config.exe
  rm -f config
  rm -f config.log
}

output_objs()
{
  echo -n "${1}=" >> config.mak
  for file in ${3}
  do
    printf " \\\\\n  ${2}/${file}" >> config.mak
  done
  echo >> config.mak
}

