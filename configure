FLAGS=""
LDFLAGS=""
LDFLAGS_UTIL=""
DFLAGS=""
CONFIG_EXT=""
INSTALL_PREFIX="/usr/local"
INSTALL_BIN=
INSTALL_INCLUDES=
INCLUDE_PATH=
ASM_OBJS_ALL=""
DISASM_OBJS_ALL=""
TABLE_OBJS_ALL=""
SIM_OBJS_ALL=""
CPUS=" \
  1802
  4004
